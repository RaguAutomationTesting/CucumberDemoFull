pipeline {
    agent any

    tools {
        maven 'maven-4.0.0'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/RaguAutomationTesting/CucumberDemoFull.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Report') {
            steps {
                publishHTML(target: [
                    reportDir: 'src/test/resources/Reports/Jvm Reports',
                    reportFiles: 'overview-features.html',
                    reportName: 'Cucumber Report'
                ])
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/src/test/resources/Reports/Jvm Reports/*.html', fingerprint: true
        }

        success {
            echo 'Build and Tests Passed. Sending Email...'
            mail to: 'raguram.n55@gmail.com',
                 subject: "‚úÖ SUCCESS: Jenkins Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                 body: """Hello Ragu,

‚úÖ Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' completed **successfully**.

üìÑ View Report:
${env.BUILD_URL}src/test/resources/Reports/Jvm%20Reports/overview-features.html

Regards,
Jenkins
"""
        }

        failure {
            echo 'Build Failed. Sending Email...'
            mail to: 'raguram.n55@gmail.com',
                 subject: "‚ùå FAILURE: Jenkins Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                 body: """Hello Ragu,

‚ùå Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' has **failed**.

üîç Check logs and console output:
${env.BUILD_URL}

Regards,
Jenkins
"""
        }
    }
}
